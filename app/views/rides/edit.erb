<% if !!@error_message %>
    <p class="danger"><%= @error_message %></p>
<% end %>

<form action="/rides/<%=@ride.id%>/edit" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="distance">Distance (miles):</label>
    <input type="text" name="distance" id="distance" value="<%=@ride.distance%>"><br>
    <label for="time">Durantion (minutes):</label>
    <input type="text" name="time" id="time" value="<%=@ride.time%>"><br>
    <label for="mood">Mood:</label><br>
    <textarea name="mood" id="mood" cols="30" rows="10"><%=@ride.mood%></textarea><br>
    <input type="submit" value="Edit">
</form>
